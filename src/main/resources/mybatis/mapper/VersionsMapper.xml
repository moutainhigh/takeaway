<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gkyt.ywgk.modular.dao.mapper.VersionsMapper">
	<resultMap id="BaseResultMap" type="com.gkyt.ywgk.modular.dao.model.Versions">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="version_code" property="versionCode" jdbcType="VARCHAR" />
		<result column="version_number" property="versionNumber"
			jdbcType="INTEGER" />
		<result column="created_at" property="createdAt" jdbcType="DATE" />
		<result column="updated_at" property="updatedAt" jdbcType="DATE" />
		<result column="type_id" property="typeId" jdbcType="INTEGER" />
		<result column="download" property="download" jdbcType="VARCHAR" />
		<result column="is_force" property="isForce" jdbcType="INTEGER" />
	</resultMap>

	<sql id="Base_Column_List">
		id,
		version_code,version_number,type_id,download,is_force,created_at,updated_at
	</sql>

	<select id="getById" parameterType="java.lang.String" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from versions
		where id = #{id,jdbcType=VARCHAR}
	</select>

	<select id="getAll" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from versions order by id desc
	</select>

	<select id="findPage" parameterType="com.gkyt.ywgk.modular.dao.dto.VersionsDto"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from versions where 1=1
		<if test="versionNumber != null and versionNumber != ''">
			and version_number LIKE "%"#{versionNumber,jdbcType=INTEGER}"%"
		</if>
		order by id desc
	</select>

	<delete id="delete" parameterType="java.lang.String">
		delete from versions where id
		= #{id,jdbcType=VARCHAR}
	</delete>

	<insert id="save" parameterType="com.gkyt.ywgk.modular.dao.model.Versions">
		<selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
			SELECT
			LAST_INSERT_ID()
		</selectKey>
		insert into versions (
		version_code,
		version_number,
		type_id,
		description,
		download,
		created_at
		)
		values
		(#{versionCode,jdbcType=VARCHAR}, #{versionNumber,jdbcType=INTEGER},
		#{typeId,jdbcType=INTEGER},
		#{description,jdbcType=VARCHAR},#{download,jdbcType=VARCHAR},#{createdAt,jdbcType=TIMESTAMP}
		)
	</insert>

	<update id="update" parameterType="com.gkyt.ywgk.modular.dao.model.Versions">
		update versions
		set
		version_code =
		#{versionCode,jdbcType=VARCHAR},
		version_number =
		#{versionNumber,jdbcType=INTEGER},
		is_force =
		#{isForce,jdbcType=INTEGER},
		updated_at =
		#{updatedAt,jdbcType=TIMESTAMP}
		where id =
		#{id,jdbcType=INTEGER}
	</update>
</mapper>